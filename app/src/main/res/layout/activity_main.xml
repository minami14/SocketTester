<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="WebSocket"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWebSocket" android:textSize="36sp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_width="256dp"/>
    <Button
            android:text="TCP"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTcp" android:textSize="36sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/buttonWebSocket"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="UDP"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUdp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonTcp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_width="256dp" android:textSize="36sp"/>
</android.support.constraint.ConstraintLayout>